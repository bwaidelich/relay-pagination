{
    "name": "wwwision/relay-pagination",
    "description": "Simple pagination implementing the Cursor Connections Specification, see https://relay.dev/graphql/connections.htm",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Bastian Waidelich",
            "email": "b.waidelich@wwwision.de"
        }
    ],
    "require": {
        "php": ">= 8.1",
        "webmozart/assert": "^1.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "suggest": {
        "doctrine/dbal": "To make use of the DbalLoader"
    },
    "autoload": {
        "psr-4": {
            "Wwwision\\RelayPagination\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wwwision\\RelayPagination\\Tests\\": "tests/"
        }
    }
}
